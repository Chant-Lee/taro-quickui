<template>
  <div class="taro_progress">
    <progress 
      class="taro_progress_info {{className}}" 
      style="{{progressStyle}}"
      type="{{type}}" 
      percent="{{percent}}" 
      onclick="handleClick" 
      disabled="{{disabled}}">
    </progress>
    <text class="taro_progress_text" if="showInfo">{{percent}}%</text>
  </div>
</template>

<script>

  export default {

    props: {
      type: {
        type: String,
        required: false,
        default: 'horizontal'
      },
      className: {
        type: String,
        required: false,
        default: ''
      },
      id: {
        type: String,
        required: false
      },
      disabled: {
        type: Boolean,
        required: false,
        default: false
      },
      style: {
        type: Object,
        required: false,
        default: {flex: 1}
      },
      percent: {
        type: Number,
        required: false,
        default: 0
      },
      showInfo: {
        type: Boolean,
        required: false,
        default: false
      },
      color: {
        type: String,
        required: false,
        default: '#09BB07'
      },
      backgroundColor: {
        type: String,
        required: false,
        default: '#fff'
      },
      activeColor: {
        type: String,
        required: false,
        default: '#09BB07'
      },
      strokeWidth: {
        type: String,
        required: false,
        default: 6
      }
    },

    data: () => ({
      progressStyle: {},
    }),

    onInit() {
      this.progressStyle = Object.assign(this.style, { 'background': this.backgroundColor,
        'color': this.color, 'stroke-width': `${this.strokeWidth}px`})
    },

    handleClick(e) {
      this.$emit('click', e)
    }
  }
</script>

<style>
  .taro_progress {
    display: flex;
    width: 100%;
    flex-direction: row;
  }

  .taro_progress_info {
    flex: 1;
    stroke-width: 6px; 
  }

  .taro_progress_text {
    width: 10%;
  }
</style>